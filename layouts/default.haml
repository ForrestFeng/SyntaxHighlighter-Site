---
extension: html
filter: haml
---
!!! XML
!!! Strict

- @home = "/SyntaxHighlighter"
- @partials = "#{@home}/partials"
- @sh = "/pub/sh/current"

%html{ :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %title= "SyntaxHighlighter - #{@page.title}"
    %script{ :type => 'text/javascript', :src => "/scripts/jquery-1.4.2.js" }
  
  %body
    #donationware.promo
      :markdown
        SyntaxHighlighter is __open source__ and needs your 
        [donations][1]. Please [download][2] and follow @[syntaxhighlight][3] on Twitter.
        
        [1]: https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=2930402
        [2]: download.html
        [3]: http://twitter.com/syntaxhighlight
        
    .layout
      .main
        .content
          .title
            %h1
              %a{ :href => @home } SyntaxHighlighter
              \/
              = @page.title
          .body
            = @content
          
          %div{ :style => 'clear: both' }
          = render(:partial => "/SyntaxHighlighter/partials/donate")
        
      .header
        .content
          .name <a href="/">alexgorbatchev.com</a>
          .menu.li-links
            %ul
              %li <a href="/forums">forums</a>
              %li <a href="http://bitbucket.org/alexg/syntaxhighlighter/issues/">issues</a>
              %li <a href="http://bitbucket.org/alexg/syntaxhighlighter/">source code</a>
              %li <a href="/SyntaxHighlighter/contact.html">contact</a>
                
  %link{ :type => 'text/css', :rel => 'stylesheet', :href => "/css/main.css" }
  %link{ :type => 'text/css', :rel => 'stylesheet', :href => "#{@sh}/styles/shCore.css" }
  %link{ :type => 'text/css', :rel => 'stylesheet', :href => "#{@sh}/styles/#{@page._meta_data['theme'] || 'shThemeDefault'}.css" }
  %script{ :type => 'text/javascript', :src => "#{@sh}/scripts/XRegExp.js" }
  %script{ :type => 'text/javascript', :src => "#{@sh}/scripts/shCore.js" }
  %script{ :type => 'text/javascript', :src => "#{@sh}/scripts/shAutoloader.js" }
  %script{ :type => 'text/javascript', :src => "#{@sh}/scripts/shBrushXml.js" }
  %script{ :type => 'text/javascript', :src => "#{@home}/scripts/main.js" }
